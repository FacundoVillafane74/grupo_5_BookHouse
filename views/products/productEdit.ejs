<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/stylesForms.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
rel="stylesheet" />
    <title>Login</title>
</head>
<body>
    <div class="big-body">
        <%- include('../partials/bodyLeft.ejs') %>

        <div class="body-rigth">
    <%- include('../partials/header.ejs') %>
    <div class='login-box'>
    <main>
        <form action="">

            <div class="nombre input-global">
                <label for="nombre">Nombre del producto</label> 
                <input type="text" name="nombre" id="nombre">
            </div>               
            
            <div class="descripcion input-global">
                <label for="descripcion">Descripción</label>           
                <input type="text" name="descripcion" id="descripcion">
            </div>

            <div class="imagen input-global">
                <label for="imagen">Imágen</label>
                <input type="file" name="imagen" id="imagen">
            </div>

            <div class="categoria input-global">
                <label for="category">Categoria</label>
                <select name="category" id="category">
                    <option value="suspenso">Suspenso</option>
                    <option value="ciencia-ficcion">Ciencia Ficcion</option>
                </select>
            </div>

            <div class="precio input-global">
                <label for="precio">Precio</label>
                <input type="number" name="precio" id="precio">
            </div>

            <div class="input-global">
                <input type="submit" value="Editar">
            </div>
            
        </form>
    </main>
    </div>
    </div>
</div>
<%- include('../partials/footer.ejs') %>
</body>
</html>
