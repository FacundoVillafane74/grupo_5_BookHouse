<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/stylesProfile.css">
    <link rel="stylesheet" href="/css/stylesIndex.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v6.4.0/css/all.css" crossorigin="anonymous">
    <title>Perfil</title>
</head>

<body>
    <div class="big-body">
        <%- include('../partials/bodyLeft.ejs') %>

            <div class="body-rigth">
                <%- include('../partials/header.ejs') %>
                    <div class="card-user">
                        <img class="avatar-user" src='/images/users/<%= userFind.image %>'
                            alt="Avatar del usuario">

                        <h3>
                            <%= userFind.name.toUpperCase() %>
                            <%= userFind.last_name.toUpperCase() %>
                        </h3>

                        <form action="" class="form-buttons">
                            <button class="fav button-user">Favoritos</button>
                        </form>

                        <form action="/user/<%= userFind.id %>/edit" class="form-buttons">
                            <button class="edit button-user">Editar</button>
                        </form>

                        <form action="/" class="form-buttons">
                            <button class="out button-user">Home</button>
                        </form>

                    </div>
                    <%- include('../partials/footer.ejs') %>
            </div>
    </div>
</body>

</html>