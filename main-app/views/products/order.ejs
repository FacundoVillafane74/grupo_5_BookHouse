<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title></title>
    <link rel="stylesheet" href="/css/mdb.min.css">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/stylesIndex.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
</head>

<body>
    <div class="big-body">
        <%- include('../partials/bodyLeft.ejs') %>

        <div class="body-rigth">
            <%- include('../partials/header.ejs') %>

                <main>
                    <div class="container wow fadeIn animated">
                        <h2 class="mt-5 mb-3 h2 text-center"> Pedido Nro <%= order.id %></h2>
                        <div class="card my-5">
                            <div class="card-body">
                                <table class="table table-responsive-md mb-0">
                                    <thead>
                                        <tr>
                                            <th style="width: 50px;">
                                                <strong>#</strong>
                                            </th>
                                            <th class="th-lg">
                                                <strong>Producto</strong>
                                            </th>
                                            <th class="th-lg ">
                                                <strong>Precio</strong>
                                            </th>
                                            <th class="text-center">
                                                <strong>Cantidad</strong>
                                            </th>
                                            <th class="text-center">
                                                <strong>Subtotal</strong>
                                            </th>
                                            <th style="width: 50px;"></th>
                                        </tr>
                                    </thead>
                                    <tbody class="cartRows">
                                        <% order.orderItems.forEach((item, index) => { %>
                                            <tr>
                                                <th scope="row">
                                                    <%= index + 1 %>    
                                                </th>
                                                <td>
                                                    <%= item.name %> 
                                                </td>
                                                <td>
                                                    <%= item.price %>
                                                </td>
                                                <td class="text-center">
                                                    <%= item.quantity %>
                                                </td>
                                                <td class="text-center">
                                                    $<%= item.price * item.quantity %>
                                                </td>
                                            </tr>
                                        <% }); %>
                                    </tbody>
                                </table>
                                <div class="card-footer text-right">
                                    <h2>Total: <span class="totalAmount">$<%= order.total %></span></h2>
                                </div>
                            </div>
                        </div>
                        <div class="card">
                            <div class="card-header text-center">
                                Detalles de la compra
                            </div>
                            <form class="card-body" id="checkoutCart">
                                <div class="row">
                                    <div class=" col-md-6 mb-4">
                                        <p><strong>Tipo Envio:</strong> <%= order.shippingMethod %></p>
                                    </div>
                                    <div class=" col-md-6 mb-4">
                                        <p><strong>Pago:</strong> <%= order.paymentMethod %></p>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </main>

                <%- include('../partials/footer.ejs') %>
        </div>

    </div>
    <%- include('../partials/scripts.ejs') %>
</body>

</html>